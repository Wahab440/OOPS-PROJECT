<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="com.example.librarymanagementapp.MemberDashboardController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10" padding="20">
    <!-- Title -->
    <Label text="Member Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.halignment="CENTER" />

    <!-- Search Book Section -->
    <Label text="Search Book:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="searchField" promptText="Enter book title or author" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Button text="Search" fx:id="searchButton" onAction="#handleSearchBook" GridPane.rowIndex="1" GridPane.columnIndex="2" />

    <!-- View Book Section -->
    <Label text="View Book:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <Button text="View Book" fx:id="viewBookButton" onAction="#handleViewBook" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <!-- Download Book Section -->
    <Label text="Download Book:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <Button text="Download Book" fx:id="downloadBookButton" onAction="#handleDownloadBook" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <!-- Delete Book Section -->
    <Label text="Delete Book:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <Button text="Delete Book" fx:id="deleteBookButton" onAction="#handleDeleteBook" GridPane.rowIndex="4" GridPane.columnIndex="1" />


</GridPane>
